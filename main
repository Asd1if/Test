            opacity: 1;
        }

        [data-theme="dark"] .background-light {
            opacity: 0;
        }

        .background-dark {
            opacity: 0;
        }

        [data-theme="dark"] .background-dark {
            opacity: 1;
        }

        .background-overlay {
            position: fixed;
