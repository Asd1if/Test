                type: '–£—á–µ–±–Ω–∏–∫', 
                icon: 'üß™',
                content: '–í–≤–µ–¥–µ–Ω–∏–µ –≤ —Ö–∏–º–∏—é –¥–ª—è 8 –∫–ª–∞—Å—Å–∞. –û—Å–Ω–æ–≤–Ω—ã–µ —Ö–∏–º–∏—á–µ—Å–∫–∏–µ –ø–æ–Ω—è—Ç–∏—è, –ø–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∏–π –∑–∞–∫–æ–Ω, —Å—Ç—Ä–æ–µ–Ω–∏–µ –∞—Ç–æ–º–∞, —Ö–∏–º–∏—á–µ—Å–∫–∏–µ —Ä–µ–∞–∫—Ü–∏–∏.'
            },
            { 
                title: '–ë–∏–æ–ª–æ–≥–∏—è 9 –∫–ª–∞—Å—Å', 
                author: '–ü–∞—Å–µ—á–Ω–∏–∫ –í.–í., –ö–∞–º–µ–Ω—Å–∫–∏–π –ê.–ê.', 
                type: '–£—á–µ–±–Ω–∏–∫', 
                icon: 'üß¨',
                content: '–û–±—â–∞—è –±–∏–æ–ª–æ–≥–∏—è –¥–ª—è 9 –∫–ª–∞—Å—Å–∞. –û—Å–Ω–æ–≤—ã —Ü–∏—Ç–æ–ª–æ–≥–∏–∏, –≥–µ–Ω–µ—Ç–∏–∫–∏, —ç–≤–æ–ª—é—Ü–∏–∏ –∏ —ç–∫–æ–ª–æ–≥–∏–∏. –ò–ª–ª—é—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω–Ω–æ–µ –∏–∑–¥–∞–Ω–∏–µ —Å –ø—Ä–∞–∫—Ç–∏—á–µ—Å–∫–∏–º–∏ –∑–∞–¥–∞–Ω–∏—è–º–∏.'
            },
            { 
                title: '–ì–µ–æ–º–µ—Ç—Ä–∏—è 7-9 –∫–ª–∞—Å—Å—ã', 
                author: '–ê—Ç–∞–Ω–∞—Å—è–Ω –õ.–°., –ë—É—Ç—É–∑–æ–≤ –í.–§.', 
                type: '–ó–∞–¥–∞—á–Ω–∏–∫', 
                icon: 'üìê',
                content: '–°–±–æ—Ä–Ω–∏–∫ –∑–∞–¥–∞—á –ø–æ –≥–µ–æ–º–µ—Ç—Ä–∏–∏ –¥–ª—è 7-9 –∫–ª–∞—Å—Å–æ–≤. –ó–∞–¥–∞—á–∏ —Ä–∞–∑–Ω–æ–≥–æ —É—Ä–æ–≤–Ω—è —Å–ª–æ–∂–Ω–æ—Å—Ç–∏ —Å —Ä–µ—à–µ–Ω–∏—è–º–∏ –∏ –º–µ—Ç–æ–¥–∏—á–µ—Å–∫–∏–º–∏ —É–∫–∞–∑–∞–Ω–∏—è–º–∏.'
            }
        ];

        // –£—á–µ–±–Ω—ã–µ –º–∞—Ç–µ—Ä–∏–∞–ª—ã
        const STUDY_MATERIALS = {
            math: [
                {
                    title: '–§–æ—Ä–º—É–ª—ã —Å–æ–∫—Ä–∞—â–µ–Ω–Ω–æ–≥–æ —É–º–Ω–æ–∂–µ–Ω–∏—è',
                    content: '–û—Å–Ω–æ–≤–Ω—ã–µ —Ñ–æ—Ä–º—É–ª—ã: (a+b)¬≤ = a¬≤ + 2ab + b¬≤, (a-b)¬≤ = a¬≤ - 2ab + b¬≤, a¬≤-b¬≤ = (a-b)(a+b). –≠—Ç–∏ —Ñ–æ—Ä–º—É–ª—ã –ø–æ–∑–≤–æ–ª—è—é—Ç —É–ø—Ä–æ—â–∞—Ç—å –≤—ã—á–∏—Å–ª–µ–Ω–∏—è –∏ —Ä–µ—à–∞—Ç—å —Å–ª–æ–∂–Ω—ã–µ –∞–ª–≥–µ–±—Ä–∞–∏—á–µ—Å–∫–∏–µ –≤—ã—Ä–∞–∂–µ–Ω–∏—è.',
                    icon: 'üßÆ'
                },
                {
                    title: '–ö–≤–∞–¥—Ä–∞—Ç–Ω–æ–µ —É—Ä–∞–≤–Ω–µ–Ω–∏–µ',
                    content: '–û–±—â–∏–π –≤–∏–¥: ax¬≤ + bx + c = 0. –î–∏—Å–∫—Ä–∏–º–∏–Ω–∞–Ω—Ç: D = b¬≤ - 4ac. –ö–æ—Ä–Ω–∏ —É—Ä–∞–≤–Ω–µ–Ω–∏—è: x = (-b ¬± ‚àöD)/2a. –ü—Ä–∏ D > 0 - –¥–≤–∞ –∫–æ—Ä–Ω—è, D = 0 - –æ–¥–∏–Ω –∫–æ—Ä–µ–Ω—å, D < 0 - –Ω–µ—Ç –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω—ã—Ö –∫–æ—Ä–Ω–µ–π.',
                    icon: 'üìä'
                },
                {
                    title: '–¢–µ–æ—Ä–µ–º–∞ –ü–∏—Ñ–∞–≥–æ—Ä–∞',
                    content: '–í –ø—Ä—è–º–æ—É–≥–æ–ª—å–Ω–æ–º —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–µ –∫–≤–∞–¥—Ä–∞—Ç –≥–∏–ø–æ—Ç–µ–Ω—É–∑—ã —Ä–∞–≤–µ–Ω —Å—É–º–º–µ –∫–≤–∞–¥—Ä–∞—Ç–æ–≤ –∫–∞—Ç–µ—Ç–æ–≤: c¬≤ = a¬≤ + b¬≤. –¢–µ–æ—Ä–µ–º–∞ –ø—Ä–∏–º–µ–Ω—è–µ—Ç—Å—è –¥–ª—è –Ω–∞—Ö–æ–∂–¥–µ–Ω–∏—è —Å—Ç–æ—Ä–æ–Ω –ø—Ä—è–º–æ—É–≥–æ–ª—å–Ω—ã—Ö —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–æ–≤.',
                    icon: '‚ñ≥'
                }
            ],
            physics: [
                {
                    title: '–ó–∞–∫–æ–Ω—ã –ù—å—é—Ç–æ–Ω–∞',
                    content: '1. –ó–∞–∫–æ–Ω –∏–Ω–µ—Ä—Ü–∏–∏: —Ç–µ–ª–æ —Å–æ—Ö—Ä–∞–Ω—è–µ—Ç —Å–æ—Å—Ç–æ—è–Ω–∏–µ –ø–æ–∫–æ—è –∏–ª–∏ —Ä–∞–≤–Ω–æ–º–µ—Ä–Ω–æ–≥–æ –ø—Ä—è–º–æ–ª–∏–Ω–µ–π–Ω–æ–≥–æ –¥–≤–∏–∂–µ–Ω–∏—è, –ø–æ–∫–∞ –Ω–∞ –Ω–µ–≥–æ –Ω–µ –¥–µ–π—Å—Ç–≤—É—é—Ç –¥—Ä—É–≥–∏–µ —Ç–µ–ª–∞. 2. F=ma: —Å–∏–ª–∞ —Ä–∞–≤–Ω–∞ –ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—é –º–∞—Å—Å—ã –Ω–∞ —É—Å–∫–æ—Ä–µ–Ω–∏–µ. 3. –î–µ–π—Å—Ç–≤–∏–µ —Ä–∞–≤–Ω–æ –ø—Ä–æ—Ç–∏–≤–æ–¥–µ–π—Å—Ç–≤–∏—é.',
                    icon: '‚öñÔ∏è'
                },
                {
                    title: '–ó–∞–∫–æ–Ω –û–º–∞',
                    content: '–î–ª—è —É—á–∞—Å—Ç–∫–∞ —Ü–µ–ø–∏: I = U/R, –≥–¥–µ I - —Å–∏–ª–∞ —Ç–æ–∫–∞ (–ê), U - –Ω–∞–ø—Ä—è–∂–µ–Ω–∏–µ (–í), R - —Å–æ–ø—Ä–æ—Ç–∏–≤–ª–µ–Ω–∏–µ (–û–º). –î–ª—è –ø–æ–ª–Ω–æ–π —Ü–µ–ø–∏: I = ‚Ñ∞/(R+r), –≥–¥–µ ‚Ñ∞ - –≠–î–°, r - –≤–Ω—É—Ç—Ä–µ–Ω–Ω–µ–µ —Å–æ–ø—Ä–æ—Ç–∏–≤–ª–µ–Ω–∏–µ.',
                    icon: '‚ö°'
                }
            ],
            chemistry: [
                {
                    title: '–ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∏–π –∑–∞–∫–æ–Ω',
                    content: '–°–≤–æ–π—Å—Ç–≤–∞ —Ö–∏–º–∏—á–µ—Å–∫–∏—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤, –∞ —Ç–∞–∫–∂–µ —Ñ–æ—Ä–º—ã –∏ —Å–≤–æ–π—Å—Ç–≤–∞ –∏—Ö —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–π –Ω–∞—Ö–æ–¥—è—Ç—Å—è –≤ –ø–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–æ–π –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –∑–∞—Ä—è–¥–∞ —è–¥–µ—Ä –∏—Ö –∞—Ç–æ–º–æ–≤.',
                    icon: 'üß™'
                },
                {
                    title: '–û—Å–Ω–æ–≤–Ω—ã–µ –∫–ª–∞—Å—Å—ã –≤–µ—â–µ—Å—Ç–≤',
                    content: '–û–∫—Å–∏–¥—ã, –∫–∏—Å–ª–æ—Ç—ã, –æ—Å–Ω–æ–≤–∞–Ω–∏—è (—â–µ–ª–æ—á–∏), —Å–æ–ª–∏. –ü—Ä–∞–≤–∏–ª–∞ –Ω–æ–º–µ–Ω–∫–ª–∞—Ç—É—Ä—ã, —Ö–∏–º–∏—á–µ—Å–∫–∏–µ —Å–≤–æ–π—Å—Ç–≤–∞ –∏ —Å–ø–æ—Å–æ–±—ã –ø–æ–ª—É—á–µ–Ω–∏—è.',
                    icon: 'üî¨'
                }
            ],
            biology: [
                {
                    title: '–ö–ª–µ—Ç–æ—á–Ω–∞—è —Ç–µ–æ—Ä–∏—è',
                    content: '1. –ö–ª–µ—Ç–∫–∞ - —ç–ª–µ–º–µ–Ω—Ç–∞—Ä–Ω–∞—è –µ–¥–∏–Ω–∏—Ü–∞ –∂–∏–≤–æ–≥–æ. 2. –ö–ª–µ—Ç–∫–∏ –≤—Å–µ—Ö –æ—Ä–≥–∞–Ω–∏–∑–º–æ–≤ —Å—Ö–æ–¥–Ω—ã –ø–æ —Å—Ç—Ä–æ–µ–Ω–∏—é –∏ —Ñ—É–Ω–∫—Ü–∏—è–º. 3. –ö–ª–µ—Ç–∫–∏ –æ–±—Ä–∞–∑—É—é—Ç—Å—è —Ç–æ–ª—å–∫–æ –∏–∑ –∫–ª–µ—Ç–æ–∫.',
                    icon: 'üî¨'
                },
                {
                    title: '–ó–∞–∫–æ–Ω—ã –ú–µ–Ω–¥–µ–ª—è',
                    content: '1. –ó–∞–∫–æ–Ω –µ–¥–∏–Ω–æ–æ–±—Ä–∞–∑–∏—è –≥–∏–±—Ä–∏–¥–æ–≤ –ø–µ—Ä–≤–æ–≥–æ –ø–æ–∫–æ–ª–µ–Ω–∏—è. 2. –ó–∞–∫–æ–Ω —Ä–∞—Å—â–µ–ø–ª–µ–Ω–∏—è. 3. –ó–∞–∫–æ–Ω –Ω–µ–∑–∞–≤–∏—Å–∏–º–æ–≥–æ –Ω–∞—Å–ª–µ–¥–æ–≤–∞–Ω–∏—è.',
                    icon: 'üß¨'
                }
            ]
        };

        // –¢–µ–∫—É—â–µ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ
        let currentView = 'youtube';
        let currentCategory = 'math';

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', () => {
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–æ–Ω–æ–≤—ã—Ö –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
            checkBackgroundImages();
            
            // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ç–µ–º—ã
            const savedTheme = localStorage.getItem('theme') || 'light';
            setTheme(savedTheme);

            // –ó–∞–≥—Ä—É–∑–∫–∞ –Ω–∞—á–∞–ª—å–Ω–æ–≥–æ –∫–æ–Ω—Ç–µ–Ω—Ç–∞
            loadYouTubeVideos();

            // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤ —Å–æ–±—ã—Ç–∏–π
            setupEventListeners();

            // –ü–æ–∫–∞–∑–∞—Ç—å –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—é –≤ –∫–æ–Ω—Å–æ–ª–∏
            console.log('%cüé¨ YouTube –ø–ª–µ–µ—Ä —Ä–∞–±–æ—Ç–∞–µ—Ç –Ω–∞ —Å–∞–π—Ç–µ!', 'color: #10b981; font-size: 16px; font-weight: bold;');
            console.log('%c–ù–∞–∂–º–∏—Ç–µ –Ω–∞ –ª—é–±–æ–µ –≤–∏–¥–µ–æ —á—Ç–æ–±—ã –æ—Ç–∫—Ä—ã—Ç—å –ø–ª–µ–µ—Ä', 'color: #84cc16;');
        });

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–æ–Ω–æ–≤—ã—Ö –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
        function checkBackgroundImages() {
            const lightBg = document.querySelector('.background-light');
            const darkBg = document.querySelector('.background-dark');
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∑–∞–≥—Ä—É–∑–∫—É –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
            lightBg.onload = () => console.log('‚úÖ –°–≤–µ—Ç–ª—ã–π —Ñ–æ–Ω –∑–∞–≥—Ä—É–∂–µ–Ω');
            lightBg.onerror = () => console.error('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ background-light.jpg');
            
            darkBg.onload = () => console.log('‚úÖ –¢–µ–º–Ω—ã–π —Ñ–æ–Ω –∑–∞–≥—Ä—É–∂–µ–Ω');
            darkBg.onerror = () => console.error('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ background-dark.jpg');
        }

        // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Ç–µ–º–æ–π
        function setTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
            
            const themeIcon = document.querySelector('#themeToggle i');
            themeIcon.className = theme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∫–∞—Ä—Ç–æ—á–∫–∏
            updateContentByCategory();
        }

        // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤ —Å–æ–±—ã—Ç–∏–π
        function setupEventListeners() {
            // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ç–µ–º—ã
            document.getElementById('themeToggle').addEventListener('click', () => {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                setTheme(currentTheme === 'dark' ? 'light' : 'dark');
            });

            // –ö–Ω–æ–ø–∫–∏ –º–µ–Ω—é
            document.getElementById('btnHome').addEventListener('click', () => {
                setActiveMenu('btnHome');
                loadYouTubeVideos();
                currentView = 'youtube';
            });

            document.getElementById('btnYouTube').addEventListener('click', () => {
                setActiveMenu('btnYouTube');
                loadYouTubeVideos();
                currentView = 'youtube';
            });

            document.getElementById('btnWiki').addEventListener('click', () => {
                setActiveMenu('btnWiki');
                loadWikipediaArticles();
                currentView = 'wiki';
            });

            document.getElementById('btnLibrary').addEventListener('click', () => {
                setActiveMenu('btnLibrary');
                loadLibraryContent();
                currentView = 'library';
            });

            document.getElementById('btnMaterials').addEventListener('click', () => {
                setActiveMenu('btnMaterials');
                loadStudyMaterials();
                currentView = 'materials';
            });

            // –ö–∞—Ä—Ç–æ—á–∫–∏ –∫–∞—Ç–µ–≥–æ—Ä–∏–π
            document.querySelectorAll('.category-card').forEach(card => {
                card.addEventListener('click', () => {
                    currentCategory = card.dataset.category;
                    updateContentByCategory();
                });
            });

            // –ü–æ–∏—Å–∫
            document.getElementById('searchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    performSearch(e.target.value);
                }
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
            document.getElementById('closeModal').addEventListener('click', closeVideoModal);

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ –∫–ª–∏–∫—É –Ω–∞ —Ñ–æ–Ω
            document.getElementById('videoModal').addEventListener('click', (e) => {
                if (e.target === document.getElementById('videoModal')) {
                    closeVideoModal();
                }
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ Escape
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    closeVideoModal();
                }
            });
        }

        // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∞–∫—Ç–∏–≤–Ω–æ–≥–æ –º–µ–Ω—é
        function setActiveMenu(activeId) {
            document.querySelectorAll('.menu-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(activeId).classList.add('active');
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ YouTube –≤–∏–¥–µ–æ
        function loadYouTubeVideos() {
            const container = document.getElementById('contentContainer');
            container.innerHTML = '<div class="loading" style="grid-column: 1/-1; margin: 50px auto;"></div>';

            setTimeout(() => {
                const videos = VIDEO_DATA[currentCategory] || VIDEO_DATA.math;
                renderYouTubeVideos(videos);
            }, 500);
        }

        // –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ YouTube –≤–∏–¥–µ–æ
        function renderYouTubeVideos(videos) {
            const container = document.getElementById('contentContainer');
            
            container.innerHTML = videos.map(video => `
                <div class="video-card fade-in" onclick="openVideoModal('${video.id}')">
                    <div class="video-thumbnail">
                        <img src="${video.thumbnail}" alt="${video.title}" loading="lazy">
                        <div class="play-btn">
                            <i class="fas fa-play"></i>
                        </div>
                    </div>
                    <div class="video-info">
                        <h3 class="video-title">${video.title}</h3>
                        <div style="color: var(--text-secondary); font-size: 14px; margin-bottom: 10px;">
                            ${video.channel}
                        </div>
                        <div class="video-meta">
                            <span><i class="far fa-clock"></i> ${video.duration}</span>
                            <span><i class="far fa-eye"></i> ${video.views}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // –û—Ç–∫—Ä—ã—Ç–∏–µ –≤–∏–¥–µ–æ –ø–ª–µ–µ—Ä–∞
        function openVideoModal(videoId) {
            const modal = document.getElementById('videoModal');
            const player = document.getElementById('youtubePlayer');
            const title = document.getElementById('modalVideoTitle');
            const description = document.getElementById('modalVideoDescription');
            const info = document.getElementById('modalVideoInfo');

            // –ù–∞—Ö–æ–¥–∏–º –¥–∞–Ω–Ω—ã–µ –≤–∏–¥–µ–æ
            const allVideos = Object.values(VIDEO_DATA).flat();
            const videoData = allVideos.find(v => v.id === videoId);

            if (videoData) {
                // –í—Å—Ç—Ä–∞–∏–≤–∞–µ–º YouTube –ø–ª–µ–µ—Ä
                player.src = `https://www.youtube.com/embed/${videoData.id}?autoplay=1&rel=0&modestbranding=1`;
                title.textContent = videoData.title;
                description.textContent = videoData.description;
                info.innerHTML = `
                    <div><strong>–ö–∞–Ω–∞–ª:</strong> ${videoData.channel}</div>
                    <div><strong>–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:</strong> ${videoData.duration}</div>
                    <div><strong>–ü—Ä–æ—Å–º–æ—Ç—Ä—ã:</strong> ${videoData.views}</div>
                `;
            } else {
                // –ó–∞–ø–∞—Å–Ω–æ–π –≤–∞—Ä–∏–∞–Ω—Ç
                player.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
                title.textContent = '–û–±—Ä–∞–∑–æ–≤–∞—Ç–µ–ª—å–Ω–æ–µ –≤–∏–¥–µ–æ';
                description.textContent = '–û–±—É—á–∞—é—â–∏–π –º–∞—Ç–µ—Ä–∏–∞–ª –ø–æ —à–∫–æ–ª—å–Ω–æ–π –ø—Ä–æ–≥—Ä–∞–º–º–µ';
                info.innerHTML = `
                    <div><strong>–ö–∞—Ç–µ–≥–æ—Ä–∏—è:</strong> ${currentCategory}</div>
                    <div><strong>–ü—Ä–µ–¥–º–µ—Ç:</strong> ${getSubjectName(currentCategory)}</div>
                `;
            }

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –≤–∏–¥–µ–æ –ø–ª–µ–µ—Ä–∞
        function closeVideoModal() {
            const modal = document.getElementById('videoModal');
            const player = document.getElementById('youtubePlayer');
            
            // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≤–∏–¥–µ–æ
            player.src = '';
            
            // –°–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // –ü–æ–ª—É—á–µ–Ω–∏–µ –Ω–∞–∑–≤–∞–Ω–∏—è –ø—Ä–µ–¥–º–µ—Ç–∞
        function getSubjectName(category) {
            const subjects = {
                math: '–ú–∞—Ç–µ–º–∞—Ç–∏–∫–∞',
                physics: '–§–∏–∑–∏–∫–∞',
                chemistry: '–•–∏–º–∏—è',
                biology: '–ë–∏–æ–ª–æ–≥–∏—è'
            };
            return subjects[category] || '–û–±—â–∏–π';
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å—Ç–∞—Ç–µ–π –í–∏–∫–∏–ø–µ–¥–∏–∏
        function loadWikipediaArticles() {
            const container = document.getElementById('contentContainer');
            container.innerHTML = '<div class="loading" style="grid-column: 1/-1; margin: 50px auto;"></div>';

            setTimeout(() => {
                const articles = WIKI_DATA[currentCategory] || WIKI_DATA.math;
                renderWikipediaArticles(articles);
            }, 500);
        }

        // –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Å—Ç–∞—Ç–µ–π –í–∏–∫–∏–ø–µ–¥–∏–∏
        function renderWikipediaArticles(articles) {
            const container = document.getElementById('contentContainer');
            
            container.innerHTML = articles.map(article => `
                <div class="wiki-card fade-in">
                    <h3 class="wiki-title">${article.title}</h3>
                    <p class="wiki-content">${article.content}</p>
                    <button onclick="window.open('${article.url}', '_blank')" class="wiki-link">
                        –ß–∏—Ç–∞—Ç—å –Ω–∞ –í–∏–∫–∏–ø–µ–¥–∏–∏
                        <i class="fas fa-external-link-alt"></i>
                    </button>
                </div>
            `).join('');
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
        function loadLibraryContent() {
            const container = document.getElementById('contentContainer');
            
            container.innerHTML = `
                <div class="library-card fade-in" style="grid-column: 1/-1;">
                    <h3 class="library-title">
                        <i class="fas fa-book-reader"></i>
                        –£—á–µ–±–Ω–∞—è –±–∏–±–ª–∏–æ—Ç–µ–∫–∞ 8-9 –∫–ª–∞—Å—Å
                    </h3>
                    <ul class="library-list">
                        ${LIBRARY_DATA.map(item => `
                            <li class="library-item" onclick="openLibraryItem('${item.title}')">
                                <span class="library-icon">${item.icon}</span>
                                <div style="flex: 1;">
                                    <div style="font-weight: 500; margin-bottom: 4px;">${item.title}</div>
                                    <div style="font-size: 14px; color: var(--text-secondary);">
                                        ${item.author} ‚Ä¢ ${item.type}
                                    </div>
                                </div>
                                <i class="fas fa-chevron-right" style="color: var(--text-secondary);"></i>
                            </li>
                        `).join('')}
                    </ul>
                </div>
            `;
        }

        // –û—Ç–∫—Ä—ã—Ç–∏–µ —ç–ª–µ–º–µ–Ω—Ç–∞ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
        function openLibraryItem(title) {
            const item = LIBRARY_DATA.find(i => i.title === title);
            if (item) {
                const container = document.getElementById('contentContainer');
                container.innerHTML = `
                    <div class="wiki-card fade-in" style="grid-column: 1/-1;">
                        <button onclick="loadLibraryContent()" class="toolbar-btn secondary" style="margin-bottom: 20px;">
                            <i class="fas fa-arrow-left"></i> –ù–∞–∑–∞–¥ –≤ –±–∏–±–ª–∏–æ—Ç–µ–∫—É
                        </button>
                        <h3 class="wiki-title">${item.title}</h3>
                        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 20px;">
                            <span style="font-size: 40px;">${item.icon}</span>
                            <div>
                                <div style="font-size: 16px; font-weight: 500;">${item.author}</div>
                                <div style="color: var(--text-secondary);">${item.type}</div>
                            </div>
                        </div>
                        <p class="wiki-content">${item.content}</p>
                        <div class="material-toolbar">
                            <button class="toolbar-btn primary">
                                <i class="fas fa-book-open"></i> –ß–∏—Ç–∞—Ç—å –æ–Ω–ª–∞–π–Ω
                            </button>
                            <button class="toolbar-btn secondary">
                                <i class="fas fa-download"></i> –°–∫–∞—á–∞—Ç—å PDF
                            </button>
                            <button class="toolbar-btn secondary">
                                <i class="fas fa-print"></i> –ü–µ—á–∞—Ç—å
                            </button>
                        </div>
                    </div>
                `;
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —É—á–µ–±–Ω—ã—Ö –º–∞—Ç–µ—Ä–∏–∞–ª–æ–≤
        function loadStudyMaterials() {
            const container = document.getElementById('contentContainer');
            
            const materials = STUDY_MATERIALS[currentCategory] || STUDY_MATERIALS.math;
            
            container.innerHTML = materials.map(material => `
                <div class="material-card fade-in">
                    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px;">
                        <span style="font-size: 30px;">${material.icon}</span>
                        <h3 class="material-title">${material.title}</h3>
                    </div>
                    <p class="material-content">${material.content}</p>
                    <div class="material-toolbar">
                        <button class="toolbar-btn primary">
                            <i class="fas fa-save"></i> –°–æ—Ö—Ä–∞–Ω–∏—Ç—å
                        </button>
                        <button class="toolbar-btn secondary">
                            <i class="fas fa-share"></i> –ü–æ–¥–µ–ª–∏—Ç—å—Å—è
                        </button>
                        <button class="toolbar-btn secondary">
                            <i class="fas fa-copy"></i> –ö–æ–ø–∏—Ä–æ–≤–∞—Ç—å
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–æ–Ω—Ç–µ–Ω—Ç–∞ –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
        function updateContentByCategory() {
            switch(currentView) {
                case 'youtube':
                    loadYouTubeVideos();
                    break;
                case 'wiki':
                    loadWikipediaArticles();
                    break;
                case 'library':
                    loadLibraryContent();
                    break;
                case 'materials':
                    loadStudyMaterials();
                    break;
                default:
                    loadYouTubeVideos();
            }
        }

        // –ü–æ–∏—Å–∫
        function performSearch(query) {
            if (!query.trim()) return;

            const container = document.getElementById('contentContainer');
            container.innerHTML = '<div class="loading" style="grid-column: 1/-1; margin: 50px auto;"></div>';

            setTimeout(() => {
                container.innerHTML = `
                    <div class="wiki-card fade-in" style="grid-column: 1/-1;">
                        <h3 class="wiki-title">–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –ø–æ–∏—Å–∫–∞: "${query}"</h3>
                        <div class="wiki-content">
                            <p>–ù–∞–π–¥–µ–Ω–æ –º–∞—Ç–µ—Ä–∏–∞–ª–æ–≤ –ø–æ –≤–∞—à–µ–º—É –∑–∞–ø—Ä–æ—Å—É:</p>
                            <div style="margin-top: 20px;">
                                <div style="padding: 15px; background: var(--bg-secondary); border-radius: var(--radius-md); margin-bottom: 10px; cursor: pointer;" onclick="loadYouTubeVideos()">
                                    <strong>üìπ –í–∏–¥–µ–æ—É—Ä–æ–∫–∏:</strong> 8 –≤–∏–¥–µ–æ –ø–æ —Ç–µ–º–µ "${query}"
                                </div>
                                <div style="padding: 15px; background: var(--bg-secondary); border-radius: var(--radius-md); margin-bottom: 10px; cursor: pointer;" onclick="loadWikipediaArticles()">
                                    <strong>üìö –°—Ç–∞—Ç—å–∏:</strong> 12 —Å—Ç–∞—Ç–µ–π –≤ –í–∏–∫–∏–ø–µ–¥–∏–∏ –ø–æ —Ç–µ–º–µ "${query}"
                                </div>
                                <div style="padding: 15px; background: var(--bg-secondary); border-radius: var(--radius-md); margin-bottom: 10px; cursor: pointer;" onclick="loadStudyMaterials()">
                                    <strong>üìñ –ú–∞—Ç–µ—Ä–∏–∞–ª—ã:</strong> 5 —É—á–µ–±–Ω—ã—Ö –º–∞—Ç–µ—Ä–∏–∞–ª–æ–≤ –ø–æ "${query}"
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }, 1000);
        }

        // –ì–æ—Ä—è—á–∏–µ –∫–ª–∞–≤–∏—à–∏
        document.addEventListener('keydown', (e) => {
            // Ctrl + 1-5 –¥–ª—è –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            if (e.ctrlKey) {
                e.preventDefault();
                switch(e.key) {
                    case '1':
                        setActiveMenu('btnYouTube');
                        loadYouTubeVideos();
                        currentView = 'youtube';
                        break;
                    case '2':
                        setActiveMenu('btnWiki');
                        loadWikipediaArticles();
                        currentView = 'wiki';
                        break;
                    case '3':
                        setActiveMenu('btnLibrary');
                        loadLibraryContent();
                        currentView = 'library';
                        break;
                    case '4':
                        setActiveMenu('btnMaterials');
                        loadStudyMaterials();
                        currentView = 'materials';
                        break;
                }
            }
        });
    </script>
</body>
</html>
